@sample
////RETRIEVE [ MAIN ] >> [ BUS 2 ] 
spl16 = spl0;
spl17 = spl1;

//bus_3
spl18   =  bus_3_output * (
          (spl2  * bus_3_send_1_L) + 
          (spl4  * bus_3_send_2_L) + 
          (spl6  * bus_3_send_3_L) +
          (spl8  * bus_3_send_4_L) +
          (spl10 * bus_3_send_5_L) +
          (spl12 * bus_3_send_6_L) +
          (spl14 * bus_3_send_7_L) +
          (spl16 * bus_3_send_8_L) );

spl19   =  bus_3_output * (
          (spl3  * bus_3_send_1_R) + 
          (spl5  * bus_3_send_2_R) + 
          (spl7  * bus_3_send_3_R) +
          (spl9  * bus_3_send_4_R) + 
          (spl11 * bus_3_send_5_R) +
          (spl13 * bus_3_send_6_R) +
          (spl15 * bus_3_send_7_R) +
          (spl17 * bus_3_send_8_R) );
         

////FEED [ BUS 3 ] >> [ MAIN ]
spl0 = spl18;
spl1 = spl19;
    
